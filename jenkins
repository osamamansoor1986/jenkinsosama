pipeline {
    agent { 
        label 'windows-client'
    }
    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/osamamansoor1986/jenkinsosama.git', branch: 'main'
            }
        }
        stage('Build') {
            steps {
                bat 'echo Building on Windows client'
                bat 'build-command'  // Replace with actual build command
            }
        }
        stage('Test') {
            steps {
                bat 'echo Running tests on Windows client'
                bat 'test-command'  // Replace with actual test command
            }
        }
        stage('Deploy') {
            steps {
                bat 'echo Deploying on Windows client'
                bat 'deploy-command'  // Replace with actual deploy command
            }
        }
    }
}
